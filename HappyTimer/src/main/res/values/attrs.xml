<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularCountDownView">
        <attr name="timer_total_seconds" format="integer" />
        <attr name="timer_time_elapsed_interval" format="integer" />
        <attr name="stroke_foreground_color" format="color" />
        <attr name="stroke_background_color" format="color" />
        <attr name="stroke_foreground_thickness" format="dimension" />
        <attr name="stroke_background_thickness" format="dimension" />
        <attr name="timer_text_size" format="dimension" />
        <attr name="timer_text_shown" format="boolean" />
        <attr name="timer_text_color" format="color" />
        <attr name="timer_text_isBold" format="boolean" />
        <attr name="timer_type" format="enum">
            <enum name="COUNT_UP" value="0" />
            <enum name="COUNT_DOWN" value="1" />
        </attr>
        <attr name="timer_text_format" format="enum">
            <enum name="HOUR_MINUTE_SECOND" value="0"/>
            <enum name="MINUTE_SECOND" value="1" />
            <enum name="SECOND" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NormalCountDownView">
        <attr name="normal_timer_text_size" format="dimension" />
        <attr name="normal_timer_label_text_size" format="dimension" />
        <attr name="normal_timer_text_color" format="color" />
        <attr name="normal_timer_text_label_color" format="color" />
        <attr name="normal_timer_text_isBold" format="boolean" />
        <attr name="normal_timer_text__label_isBold" format="boolean" />
        <attr name="show_labels" format="boolean"/>
        <attr name="show_hour" format="boolean"/>
        <attr name="show_minutes" format="boolean"/>
        <attr name="show_seconds" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DynamicCountDownView">
        <attr name="dynamic_timer_text_size" format="dimension" />
        <attr name="dynamic_timer_separator_text_size" format="dimension" />
        <attr name="dynamic_timer_text_color" format="color" />
        <attr name="dynamic_timer_text_separator_color" format="color" />
        <attr name="dynamic_timer_text_separator" format="string" />
        <attr name="dynamic_timer_text_isBold" format="boolean" />
        <attr name="dynamic_timer_text__separator_isBold" format="boolean" />
        <attr name="dynamic_show_labels" format="boolean"/>
        <attr name="dynamic_show_hour" format="boolean"/>
        <attr name="dynamic_show_minutes" format="boolean"/>
        <attr name="dynamic_show_seconds" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="foreground_color" format="color" />
        <attr name="background_color" format="color" />
        <attr name="foreground_thickness" format="dimension" />
        <attr name="background_thickness" format="dimension" />
        <attr name="max_progress" format="integer"/>
        <attr name="default_progress" format="float"/>
        <attr name="progress_flow" format="enum">
            <enum name="LEFT_TO_RIGHT" value="0"/>
            <enum name="RIGHT_TO_LEFT" value="1" />
        </attr>
    </declare-styleable>
</resources>